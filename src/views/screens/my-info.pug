extends ../base.pug

block content
  include ../partials/header
  .container.my-info__container
    .my-info
      .big3__header
        span.big3__title What are your big 3?
        .big3__sum
          span#big3Sum 330
          span.unit-weight kg
      .big3__contents
        .big3__squat
          span Squat
          .my-records
            span#squat 130
            span.unit-weight kg
        .big3__bench-press
          span Bench press
          .my-records
            span#benchPress 80
            span.unit-weight kg
        .big3__dead-lift
          span Dead lift
          .my-records
            span#deadLift 120
            span.unit-weight kg

      span.my-body__header My body
      .my-body__contents
        .my-body__height
          span Height
          .my-records
            span#height 172
            span.unit-length cm
        .my-body__weight
          span Weight
          .my-records
            span#weight 69.8
            span.unit-weight kg
        .my-body__skeletal-muscle-mass
          span Skeletal muscle mass
          .my-records
            span#skeletalMuscelMass 33.4
            span.unit-weight kg
        .my-body__body-fat-mass
          span Body fat mass
          .my-records
            span#bodyFatMass 11.3
            span.unit-weight kg
        .my-body__percent-body-fat
          span Percent body fat
          .my-records
            span#percentBodyFat 16.2
            span.unit-percent %

      span.target__header Target
      .target__contents
        .target__weight
          span Weight
          .my-records
            span#targetWeight 65
            span.unit-weight kg
        .target__skeletal-muscle-mass
          span Skeletal muscle mass
          .my-records
            span#targetSkeletalMuscleMass 34
            span.unit-weight kg
        .target__percent-body-fat
          span Percent body fat
          .my-records
            span#tartgetPercentBodyFat 8
            span.unit-percent %

  include ../partials/navbar
