extends ../../base.pug

block content
  include ../../partials/header
  .container.settings__container
    form.settings-my-body(method='POST')
      .big3__header
        span.big3__title What are your big 3?
        .big3__sum
          span #{ squat + benchPress+deadLift }
          span.unit-weight kg
      .big3__contents
        .big3__squat
          span Squat
          .my-records
            input(name='squat', type='text', value=squat, required)
            span.unit-weight kg
        .big3__bench-press
          span Bench press
          .my-records
            input(name='benchPress', type='text', value=benchPress, required)
            span.unit-weight kg
        .big3__dead-lift
          span Dead lift
          .my-records
            input(name='deadLift', type='text', value=deadLift, required)
            span.unit-weight kg

      span.my-body__header My body
      .my-body__contents
        .my-body__height
          span Height
          .my-records
            input(name='height', type='text', value=height, required)
            span.unit-length cm
        .my-body__weight
          span Weight
          .my-records
            input(name='weight', type='text', value=weight, required)
            span.unit-weight kg
        .my-body__skeletal-muscle-mass
          span Skeletal muscle mass
          .my-records
            input(
              name='skeletalMuscleMass',
              type='text',
              value=skeletalMuscleMass,
              required
            )
            span.unit-weight kg
        .my-body__body-fat-mass
          span Body fat mass
          .my-records
            input(name='bodyFatMass', type='text', value=bodyFatMass, required)
            span.unit-weight kg
        .my-body__percent-body-fat
          span Percent body fat
          .my-records
            input(
              name='percentBodyFat',
              type='text',
              value=percentBodyFat,
              required
            )
            span.unit-percent %

      span.target__header Target
      .target__contents
        .target__weight
          span Weight
          .my-records
            input(
              name='targetWeight',
              type='text',
              value=targetWeight,
              required
            )
            span.unit-weight kg
        .target__skeletal-muscle-mass
          span Skeletal muscle mass
          .my-records
            input(
              name='targetSkeletalMuscleMass',
              type='text',
              value=targetSkeletalMuscleMass,
              required
            )
            span.unit-weight kg
        .target__percent-body-fat
          span Percent body fat
          .my-records
            input(
              name='targetPercentBodyFat',
              type='text',
              value=targetPercentBodyFat,
              required
            )
            span.unit-percent %

      input.button.save-my-body-btn(type='submit', value='Save')

  include ../../partials/footer
