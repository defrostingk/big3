extends ../base.pug

block content
  include ../partials/header
  .stopwatch__container
    .stopwatch
      .stopwatch__time
        span HH:MM:SS.00
      .stopwatch__time--pure
        span HH:MM:SS.00

      .stopwatch__buttons
        .stopwatch__buttons-basic
          button.start-btn Start
          button.break-btn Break
        .stopwatch__buttons-danger
          button.reset-btn Reset
          button.quit-btn Quit

  .break__container
    .break
      .break__timer
        span.remain-time 24
        span.total-time 60
      button.break-end-btn End

  .records__container

  nav
    .nav__stopwatch
      span Stopwatch
      i.fa-solid.fa-stopwatch
    .nav__records.selected
      span Records
      i.fa-solid.fa-pen-to-square 
