extends ../base.pug

block content
  include ../partials/header
  .container.stopwatch__container
    .stopwatch
      span.stopwatch__time HH:MM:SS.00
      span.stopwatch__time--pure HH:MM:SS.00

      .stopwatch__buttons
        button.start-btn Start
        button.break-btn Break
        button.reset-btn Reset

  .container.break__container
    .break
      .break__timer
        span.remain-time 24
        span.total-time 60
      button.break-end-btn End

  .container.records__container
    .records
      button.load-btn
        i.fa-solid.fa-plus
        span Load my template
      form.records__board
        .board
          .note
            .note__header
              input.note__title(
                type='text',
                value='Bench press',
                placeholder='Title'
              )
              select.note__category(name='category')
                option(value='') Category
                option(value='chest') Chest
                option(value='back') Back
                option(value='shoulder') Shoulder
                option(value='lower') Lower body
                option(value='biceps') Biceps
                option(value='triceps') Tryceps
                option(value='core') Core
                option(value='whole') Whole body
            ul.note__contents
              each num in [1,2,3,4,5]
                li.note__set
                  input#setCheck.set-check(type='checkbox')
                  label(for='setCheck')
                  span.set-number= num
                  input.set-weight(
                    type='text',
                    value='60kg',
                    placeholder='weight'
                  )
                  input.set-reps(
                    type='text',
                    value='5reps',
                    placeholder='reps'
                  )
                  button.set-delete-btn(type='button')
                    i.fa-solid.fa-xmark
              button.set-add-btn(type='button')
                i.fa-solid.fa-plus
        button.add-note-btn(type='button')
          i.fa-solid.fa-plus
          span Add a note

  nav
    a.nav__stopwatch
      span Stopwatch
      i.fa-solid.fa-stopwatch
    a.nav__records
      span Records
      i.fa-solid.fa-pen-to-square 

block scripts
  script(src='/static/js/stopwatch.js', defer)
  script(src='/static/js/recordsBoard.js', defer)
