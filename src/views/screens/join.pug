extends ../base

block content
  include ../partials/header
  .container.join__container
    .join
      span.message.error-message= errorMessage
      form.join__form(method='POST')
        input.join__email(
          name='email',
          type='email',
          placeholder='Email',
          required
        )
        input.join__username(
          name='username',
          type='text',
          placeholder='Username',
          maxlength='15',
          required
        )
        input.join__password(
          name='password',
          type='password',
          placeholder='Password',
          required
        )
        input.join__password-confirm(
          name='passwordConfirm',
          type='password',
          placeholder='Confirm password',
          required
        )
        input.button.join__join-btn(type='submit', value='Join')

  include ../partials/footer
